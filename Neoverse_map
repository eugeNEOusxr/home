    <script>
        class BrainwaveReader {
            constructor() {
                this.frequencies = {
                    delta: { min: 0.5, max: 4, current: 2.1 },
                    theta: { min: 4, max: 8, current: 6.3 },
                    alpha: { min: 8, max: 12, current: 10.1 },
                    beta: { min: 12, max: 30, current: 18.7 },
                    gamma: { min: 30, max: 100, current: 42.5 }
                };
                
                this.emotionalStates = {
                    focused: {
                        delta: 1.2, theta: 5.1, alpha: 8.9, beta: 25.3, gamma: 38.7,
                        description: "High beta and gamma activity indicate intense concentration and cognitive processing."
                    },
                    relaxed: {
                        delta: 2.8, theta: 6.8, alpha: 11.2, beta: 14.1, gamma: 32.1,
                        description: "Elevated alpha waves with moderate theta suggest a calm, meditative state."
                    },
                    excited: {
                        delta: 1.1, theta: 4.2, alpha: 9.1, beta: 28.9, gamma: 45.2,
                        description: "Peak beta and gamma frequencies indicate high arousal and anticipation."
                    },
                    stressed: {
                        delta: 0.8, theta: 4.1, alpha: 8.2, beta: 29.1, gamma: 41.8,
                        description: "Suppressed delta with high beta suggests anxiety and hypervigilance."
                    },
                    creative: {
                        delta: 2.1, theta: 7.2, alpha: 10.8, beta: 16.3, gamma: 38.9,
                        description: "Enhanced theta and alpha waves indicate divergent thinking and creative flow."
                    },
                    sleepy: {
                        delta: 3.2, theta: 6.1, alpha: 9.8, beta: 13.2, gamma: 31.1,
                        description: "Increased delta activity with reduced gamma suggests transition to sleep state."
                    }
                };
                
                this.initializeNeuralBackground();
                this.startFrequencyUpdates();
            }
            
            setEmotionState(emotion) {
                const state = this.emotionalStates[emotion];
                if (!state) return;
                
                Object.keys(this.frequencies).forEach(wave => {
                    this.frequencies[wave].current = state[wave];
                    this.updateWaveDisplay(wave, state[wave]);
                });
                
                document.getElementById('aiReading').innerHTML = `
                    <strong>Emotional State: ${emotion.toUpperCase()}</strong><br>
                    ${state.description}<br><br>
                    <em>Digital Signature: Your browsing patterns, click timing, and interaction rhythms would shift to match this neural state, creating a unique behavioral fingerprint that AI systems could recognize and predict.</em>
                `;
                
                this.animateWaves();
            }
            
            updateWaveDisplay(waveType, frequency) {
                const freqElement = document.getElementById(`${waveType}Freq`);
                if (freqElement) {
                    freqElement.textContent = frequency.toFixed(1) + 'Hz';
                }
                
                // Update wave animation speed based on frequency
                const waveElement = document.getElementById(`${waveType}Wave`);
                if (waveElement) {
                    const speed = Math.max(0.5, 3 - (frequency / 20));
                    waveElement.style.animationDuration = speed + 's';
                }
            }
            
            animateWaves() {
                document.querySelectorAll('.wave').forEach(wave => {
                    wave.style.transform = 'scale(1.1)';
                    setTimeout(() => {
                        wave.style.transform = 'scale(1)';
                    }, 300);
                });
            }
            
            startFrequencyUpdates() {
                setInterval(() => {
                    // Subtle random variations to simulate natural brainwave fluctuation
                    Object.keys(this.frequencies).forEach(wave => {
                        const variation = (Math.random() - 0.5) * 0.4;
                        this.frequencies[wave].current += variation;
                        
                        // Keep within bounds
                        if (this.frequencies[wave].current < this.frequencies[wave].min) {
                            this.frequencies[wave].current = this.frequencies[wave].min;
                        }
                        if (this.frequencies[wave].current > this.frequencies[wave].max) {
                            this.frequencies[wave].current = this.frequencies[wave].max;
                        }
                        
                        this.updateWaveDisplay(wave, this.frequencies[wave].current);
                    });
                }, 2000);
            }
            
            initializeNeuralBackground() {
                const canvas = document.getElementById('neuralCanvas');
                const ctx = canvas.getContext('2d');
                
                function resizeCanvas() {
                    canvas.width = window.innerWidth;
                    canvas.height = window.innerHeight;
                }
                
                resizeCanvas();
                window.addEventListener('resize', resizeCanvas);
                
                const nodes = [];
                const nodeCount = 50;
                
                for (let i = 0; i < nodeCount; i++) {
                    nodes.push({
                        x: Math.random() * canvas.width,
                        y: Math.random() * canvas.height,
                        vx: (Math.random() - 0.5) * 0.5,
                        vy: (Math.random() - 0.5) * 0.5
                    });
                }
                
                function drawNeuralNetwork() {
                    ctx.clearRect(0, 0, canvas.width, canvas.height);
                    
                    // Update node positions
                    nodes.forEach(node => {
                        node.x += node.vx;
                        node.y += node.vy;
                        
                        if (node.x < 0 || node.x > canvas.width) node.vx *= -1;
                        if (node.y < 0 || node.y > canvas.height) node.vy *= -1;
                    });
                    
                    // Draw connections
                    ctx.strokeStyle = 'rgba(0, 245, 255, 0.1)';
                    ctx.lineWidth = 1;
                    
                    for (let i = 0; i < nodes.length; i++) {
                        for (let j = i + 1; j < nodes.length; j++) {
                            const dx = nodes[i].x - nodes[j].x;
                            const dy = nodes[i].y - nodes[j].y;
                            const distance = Math.sqrt(dx * dx + dy * dy);
                            
                            if (distance < 150) {
                                const opacity = (150 - distance) / 150 * 0.1;
                                ctx.strokeStyle = `rgba(0, 245, 255, ${opacity})`;
                                ctx.beginPath();
                                ctx.moveTo(nodes[i].x, nodes[i].y);
                                ctx.lineTo(nodes[j].x, nodes[j].y);
                                ctx.stroke();
                            }
                        }
                    }
                    
                    // Draw nodes
                    ctx.fillStyle = 'rgba(0, 245, 255, 0.3)';
                    nodes.forEach(node => {
                        ctx.beginPath();
                        ctx.arc(node.x, node.y, 2, 0, Math.PI * 2);
                        ctx.fill();
                    });
                    
                    requestAnimationFrame(drawNeuralNetwork);
                }
                
                drawNeuralNetwork();
            }
        }
        
        // Initialize the brainwave reader
        const brainwaveReader = new BrainwaveReader();
        
        // Global function for button clicks
        function setEmotionState(emotion) {
            brainwaveReader.setEmotionState(emotion);
        }
        
        // Add some interactivity to the article text
        document.querySelectorAll('.highlight').forEach(element => {
            element.addEventListener('mouseenter', () => {
                element.style.transform = 'scale(1.05)';
                element.style.textShadow = '0 0 10px rgba(0, 245, 255, 0.5)';
            });
            
            element.addEventListener('mouseleave', () => {
                element.style.transform = 'scale(1)';
                element.style.textShadow = 'none';
            });
        });
    </script>
</body>
